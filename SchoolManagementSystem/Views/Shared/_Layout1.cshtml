<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - SchoolManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/SchoolManagementSystem.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav style="height: 10%" class="w-100 d-flex justify-content-center align-items-center navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
        <h4 class="text-center">School Management System | @ViewData["Title"]</h4>
    </nav>
</header>
<div style="height: 90%" class="d-flex flex-row w-100">
    <nav class="bg-dark" style="width: 20%">
        <ul class="navbar-nav">
            <li class="nav-item p-3 border-bottom">
                <a class="text-decoration-none fs-6 text-white" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item p-3 border-bottom">
                <a class="text-decoration-none fs-6 text-white" asp-controller="Student" asp-action="Index">Students</a>
            </li>
            <li class="nav-item p-3 border-bottom">
                <a class="text-decoration-none fs-6 text-white" asp-controller="Course" asp-action="Index">Courses</a>
            </li>
            <li class="nav-item p-3 border-bottom">
                <a class="text-decoration-none fs-6 text-white" asp-controller="Score" asp-action="Index">Score</a>
            </li>
            <li class="nav-item p-3 border-bottom">
                <a class="text-decoration-none fs-6 text-white" asp-controller="Login" asp-action="Index">Exit</a>
            </li>
        </ul>
    </nav>

    <main role="main" class="ps-2 mt-2" style="width: 80%">
        @RenderBody()
    </main>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>