@model IEnumerable<SchoolManagementSystem.Models.ScoresModel>

@{
    ViewData["Title"] = "Course";
    Layout = "_Layout1";
}

<a class="btn btn-primary" asp-action="Add">Add Score</a>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Score)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var course in Model){
        <tr>
            <td>
                @Html.DisplayFor(modelItem => course.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => course.Student.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => course.Student.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => course.Course.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => course.Score)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@course.Id">Edit</a>
                <a class="btn btn-primary" asp-action="Delete" asp-route-id="@course.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>